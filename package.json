{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./src/main.ts | pino-pretty --colorize",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock-server": "npx json-server ./mocks/mock-server-data.json --port=3377",
    "cli": "npm run ts ./src/cli/main.ts",
    "db:dev": "docker compose --env-file .env.development up -d"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "^8.56.0",
    "eslint-config-htmlacademy": "9.1.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "json-server": "^1.0.0-alpha.23",
    "pino-pretty": "^11.0.0",
    "prettier-eslint": "^16.3.0",
    "rimraf": "5.0.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.4.0",
    "axios": "^1.6.8",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "^1.11.11",
    "dotenv": "16.4.5",
    "inversify": "6.0.2",
    "mongoose": "^8.3.5",
    "pino": "9.0.0",
    "reflect-metadata": "0.2.2"
  }
}
